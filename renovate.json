{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.tf$/",
        "/\\.tftpl$/",
        "/\\.yaml$/",
        "/\\.sh$/",
        "/Dockerfile/",
        "/\\.tfvars$/"
      ],
      "matchStrings": [
        "(?<currentValue>[\\w+\\.\\-]*)['\",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?\\s?(extractVersion=(?<extractVersion>\\S+))?"
      ]
    }
  ],
  "extends": [
    "config:recommended",
    ":enablePreCommit",
    ":rebaseStalePrs"
  ]
}
